      var msg = 'enter the percentage of student:';
    
      var a = prompt(msg);
      if(a>85)
        
            document.write('Marks are '+a+' and Grade is A');
      else if(a<=85 && a>80)
          
            document.write('Marks are '+a+' and Grade is A');
      else if(a>70 && a<=80)
         
            document.write('Marks are '+a+' and Grade is B');
      else if(a>60 && a<=70)
          
            document.write('Marks are '+a+' and Grade is C');
      else if(a>40 && a<=60)
          
            document.write('Marks are '+a+' and Grade is E');
      else if(a<=40)
         
            if(a<=35)
              {
                document.write('Marks are '+a+' and Grade is F');}
            else
              {document.write('Marks are '+a+' and Grade is F');}
      </script>
