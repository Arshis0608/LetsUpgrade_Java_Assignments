    <script>
       var num = prompt("Enter an Input");
        document.write("Number = "+num+"<br>");
        if(num % 2 == 0) {
           document.write('Number is even!');
           console.log( num+"_Is Even" );
        } else {
           document.write('Number is odd!');
           console.log( num+"_Is odd");
        }
        
    </script>

</body>
